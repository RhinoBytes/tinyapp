<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username) { %>
        <form class="nav-item m1-auto" method="POST" action="/logout">
          <span class="nav-item nav-link text-light"><%= `Logged in as ${username}` %></span>
          <button type="submit" class="btn btn-primary">Log out</button>
        </form>
        <% } else { %>
        <form class="nav-item m1-auto" method="POST" action="/login">
          <input class="form-control" type="text" name="email" placeholder="Username" style="width: 200px; margin-right: 10px" />
          <button type="submit" class="btn btn-primary">Log in</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>